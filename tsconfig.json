{
  "compileroptions": {
    "target": "es2020",
    "module": "commonjs",
    "lib": ["es2020"],
    "outdir": "./dist",
    "rootdir": "./src",
    "strict": true,
    "esmoduleinterop": true,
    "skiplibcheck": true,
    "forceconsistentcasinginfilenames": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}